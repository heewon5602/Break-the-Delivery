<?xml version="1.0" encoding="utf-8"?>
<!--장바구니 버튼 눌렀을 때 나오는 화면-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5A91D"
    android:orientation="vertical">

    <!--상단 메뉴 & 장바구니 버튼-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--상단 앱 이름-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:fontFamily="@font/do_hyeon"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"/>

        <!--장바구니 버튼-->
        <ImageButton
            android:id="@+id/btnCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shopping_cart"
            android:background="@android:color/transparent"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="right|top"/>
    </FrameLayout>

    <!--하얀 뒷배경 + 장바구니에 담은 음식 수량 변경 및 삭제-->
    <FrameLayout
        android:layout_width="395dp"
        android:layout_height="550dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        android:background="@drawable/background_frame_round">
        <LinearLayout
            android:layout_width="395dp"
            android:layout_height="500dp"
            android:orientation="vertical">

            <!--장바구니에 담은 음식1-1-->
            <FrameLayout
                android:id="@+id/menu1_1"
                android:layout_width="380dp"
                android:layout_height="115dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/background_store_round">
                <ImageView
                    android:src="@drawable/food1_1"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="35dp"
                    android:text="블루베리 팬케익"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/do_hyeon"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/count1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="130dp"
                        android:layout_marginTop="60dp"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/do_hyeon"/>
                    <!--수량 +1 버튼-->
                    <ImageButton
                        android:id="@+id/plus1"
                        android:src="@drawable/plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="55dp"
                        android:layout_marginLeft="10dp"
                        android:background="@android:color/transparent"/>
                    <!--수량 -1 버튼-->
                    <ImageButton
                        android:id="@+id/minus1"
                        android:src="@drawable/minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="55dp"
                        android:layout_marginLeft="5dp"
                        android:background="@android:color/transparent"/>
                </LinearLayout>
                <!--버튼 눌리면 담은 메뉴 삭제-->
                <Button
                    android:id="@+id/button_delete1_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="25dp"
                    android:text="삭제"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/do_hyeon"
                    android:background="@drawable/button_orange"/>
            </FrameLayout>

            <!--장바구니에 담은 음식1-2-->
            <FrameLayout
                android:id="@+id/menu1_2"
                android:layout_width="380dp"
                android:layout_height="115dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/background_store_round">
                <ImageView
                    android:src="@drawable/food1_2"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="35dp"
                    android:text="딸기 팬케익"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/do_hyeon"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/count2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="130dp"
                        android:layout_marginTop="60dp"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/do_hyeon"/>
                    <!--수량 +1 버튼-->
                    <ImageButton
                        android:id="@+id/plus2"
                        android:src="@drawable/plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="55dp"
                        android:layout_marginLeft="10dp"
                        android:background="@android:color/transparent"/>
                    <!--수량 -1 버튼-->
                    <ImageButton
                        android:id="@+id/minus2"
                        android:src="@drawable/minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="55dp"
                        android:layout_marginLeft="5dp"
                        android:background="@android:color/transparent"/>
                </LinearLayout>
                <!--버튼 눌리면 담은 메뉴 삭제-->
                <Button
                    android:id="@+id/button_delete1_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="25dp"
                    android:text="삭제"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/do_hyeon"
                    android:background="@drawable/button_orange"/>
            </FrameLayout>

            <!--장바구니에 담은 음식1-3-->
            <FrameLayout
                android:id="@+id/menu1_3"
                android:layout_width="380dp"
                android:layout_height="115dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/background_store_round">
                <ImageView
                    android:src="@drawable/food1_3"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="35dp"
                    android:text="오리지널 팬케익"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/do_hyeon"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/count3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="130dp"
                        android:layout_marginTop="60dp"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/do_hyeon"/>
                    <!--수량 +1 버튼-->
                    <ImageButton
                        android:id="@+id/plus3"
                        android:src="@drawable/plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="55dp"
                        android:layout_marginLeft="10dp"
                        android:background="@android:color/transparent"/>
                    <!--수량 -1 버튼-->
                    <ImageButton
                        android:id="@+id/minus3"
                        android:src="@drawable/minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="55dp"
                        android:layout_marginLeft="5dp"
                        android:background="@android:color/transparent"/>
                </LinearLayout>
                <!--버튼 눌리면 담은 메뉴 삭제-->
                <Button
                    android:id="@+id/button_delete1_3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="25dp"
                    android:text="삭제"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/do_hyeon"
                    android:background="@drawable/button_orange"/>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

    <!--하단 아이콘-->
    <FrameLayout
        android:layout_width="395dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="13dp"
        android:backgroundTint="#fbd38b"
        android:background="@drawable/background_frame_round">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!--메인화면 버튼-->
            <ImageButton
                android:id="@+id/home_button"
                android:src="@drawable/home_icon"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"/>
            <!--그룹 버튼-->
            <ImageButton
                android:id="@+id/group_button"
                android:src="@drawable/group_icon"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_marginLeft="55dp"/>
            <!--배달 버튼-->
            <ImageButton
                android:id="@+id/delivery_button"
                android:src="@drawable/scooter_icon"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp" />
            <!--프로필 버튼-->
            <ImageButton
                android:id="@+id/profile_button"
                android:src="@drawable/profile_icon"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="7dp"/>

        </LinearLayout>
    </FrameLayout>
</FrameLayout>