<?xml version="1.0" encoding="utf-8"?>
<!--고객 메인화면 / 가게들 나열되어 있는 화면-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5A91D"
    android:orientation="vertical">

        <!--상단 메뉴 & 장바구니 버튼-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <!--상단 앱 이름-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/do_hyeon"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"/>

                <!--장바구니 버튼-->
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shopping_cart"
                    android:background="@android:color/transparent"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="right|top"/>
        </FrameLayout>

        <!--하얀 뒷배경(가게 정보 들어갈 부분)-->
        <FrameLayout
            android:layout_width="395dp"
            android:layout_height="550dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:background="@drawable/background_frame_round">
                <LinearLayout
                    android:layout_width="395dp"
                    android:layout_height="500dp"
                    android:orientation="vertical">
                        <!--가게1-->
                        <FrameLayout
                            android:id="@+id/store1"
                            android:layout_width="380dp"
                            android:layout_height="115dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="7dp"
                            android:background="@drawable/background_store_round">
                                <ImageView
                                    android:src="@drawable/store1"
                                    android:layout_gravity="center|left"
                                    android:layout_marginLeft="16dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="50dp"
                                    android:text="@string/store1"
                                    android:textSize="18dp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/do_hyeon"/>
                        </FrameLayout>

                        <!--가게2-->
                        <FrameLayout
                            android:layout_width="380dp"
                            android:layout_height="115dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="7dp"
                            android:background="@drawable/background_store_round">
                                <ImageView
                                    android:src="@drawable/store2"
                                    android:layout_gravity="center|left"
                                    android:layout_marginLeft="16dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="50dp"
                                    android:text="@string/store2"
                                    android:textSize="18dp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/do_hyeon"/>
                        </FrameLayout>

                        <!--가게3-->
                        <FrameLayout
                            android:layout_width="380dp"
                            android:layout_height="115dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="7dp"
                            android:background="@drawable/background_store_round">
                                <ImageView
                                    android:src="@drawable/store3"
                                    android:layout_gravity="center|left"
                                    android:layout_marginLeft="16dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="50dp"
                                    android:text="@string/store3"
                                    android:textSize="18dp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/do_hyeon"/>
                        </FrameLayout>

                        <!--가게4-->
                        <FrameLayout
                            android:layout_width="380dp"
                            android:layout_height="99dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="7dp"
                            android:background="@drawable/background_store_round">
                                <ImageView
                                    android:src="@drawable/store4"
                                    android:layout_gravity="center|left"
                                    android:layout_marginLeft="16dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="50dp"
                                    android:text="@string/store4"
                                    android:textSize="18dp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/do_hyeon"/>
                        </FrameLayout>
                </LinearLayout>
        </FrameLayout>

        <!--하단 아이콘 부분-->
        <FrameLayout
            android:layout_width="395dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="13dp"
            android:backgroundTint="#fbd38b"
            android:background="@drawable/background_frame_round">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                        <!--메인화면 버튼-->
                        <ImageButton
                            android:id="@+id/home_button"
                            android:src="@drawable/home_icon"
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"/>
                        <!--그룹 버튼-->
                        <ImageButton
                            android:id="@+id/group_button"
                            android:src="@drawable/group_icon"
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:layout_marginLeft="55dp"/>
                        <!--배달 버튼-->
                        <ImageButton
                            android:id="@+id/delivery_button"
                            android:src="@drawable/scooter_icon"
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="55dp"/>
                        <!--프로필 버튼-->
                        <ImageButton
                            android:id="@+id/profile_button"
                            android:src="@drawable/profile_icon"
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="55dp"
                            android:layout_marginTop="7dp"/>

                </LinearLayout>
        </FrameLayout>
</FrameLayout>